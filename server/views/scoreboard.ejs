                        <div class="negative sub"><label>Không tuân thủ biển báo: </label><span id="subtract-1-2"> 0</span></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="logo_car column" >  
                <img class="w-[40%] h-[auto] center" src="logo\logoITCAR.png">
            </div>
            <div id="btnStartStop" class="column1 ">
                <button class="btn btn-success my-btn center" id="start" data-toggle="modal">BẮT ĐẦU</button>
            </div>
            <div id="timerCount" class="timer text-[55px] column text-center" ></div>
        </div>
        <div class="row">
            <div class="board top-left column0" id="board2">
                <div class="w-full text-[18px] p-2 border-[#ffd700] border-solid border-[3px] text-[#ffd700] rounded-[30px] text-center flex items-center justify-center overflow-hidden" id="team-name-id">
                    <br><strong id="nameofteam-2">team3</strong>
                </div>
