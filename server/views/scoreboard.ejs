                        <div class="negative sub"><label>Không tuân thủ biển báo: </label><span id="subtract-3-2"> 0</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 50%;">
                <div class="modal-body" style="min-height: 40vh;">
                    <div class="counter">
                        <div class="nums">
                            <span class="in">3</span>
                            <span>2</span>
                            <span>1</span>
